<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryTextActivity"
    android:padding="@dimen/size_16dp"
    android:background="@drawable/nature_garden">

    <TextView
        android:id="@+id/tv_fruit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:text="Guess what kind of fruit?"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_18sp"
        android:textColor="#1B0009"
        android:textStyle="italic|bold"/>

    <ImageView
        android:id="@+id/img_fruit"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:src="@drawable/duck"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:boxStrokeColor="@color/colorPrimary"
        app:boxStrokeWidth="1dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_fruit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_answer"
            android:textColor="@color/dark_grey"
            android:textColorHint="@color/grey"
            android:singleLine="true"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_entry"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.95"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/size_10dp"
        android:ellipsize="marquee"
        android:text="@string/submit"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_22sp"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>